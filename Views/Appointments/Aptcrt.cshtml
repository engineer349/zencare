@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "CreateAppointment";
}

@model Zencareservice.Models.Appts;
<html>
<head>
    <meta lang="en" />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body>
    <h3>AppointmentDetails</h3>
    <form method="POST"  asp-action="Aptcrt" asp-controller="Appointments">
       @* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@
        <div class="form-row">
            <div class="form-group col-md-3">
                <label asp-for="DoctorFirstName">DoctorFirstName</label>
                <input asp-for="DoctorFirstName" type="text" class="form-control" placeholder="DoctorName">
                <span asp-validation-for="DoctorFirstName" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="DoctorLastName">DoctorLastName</label>
                <input asp-for="DoctorLastName" type="text" class="form-control" placeholder="DoctorName">
                <span asp-validation-for="DoctorLastName" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="PatientFirstName">PatientName</label>
                <input asp-for="PatientFirstName" type="text" class="form-control" id="patientname" placeholder="PatientName">
                <span asp-validation-for="PatientFirstName" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="PatientLastName">Patient LastName</label>
                <input asp-for="PatientLastName" type="text" class="form-control" id="patientname" placeholder="PatientName">
                <span asp-validation-for="PatientLastName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-2">
                <label asp-for="PatientAge">Age</label>
                <input asp-for="PatientAge" type="text" class="form-control" id="Age" placeholder="Age">
            </div>
            <div class="form-group col-md-2">
                <label asp-for="PatientGender">Gender</label>
                <select name="gender" asp-for="PatientGender" class="form-control">
                    <option value="0">--Select--Gender--</option>    
                    <option value="1">Male</option>
                    <option value="2">Female</option>
                </select>
                @* <span asp-validation-for="GenderName" class="text-danger"></span> *@
            </div>
            <div class="form-group col-md-2">
                <label asp-for="Patientphoneno">ContactNo</label>
                <input asp-for="Patientphoneno" type="tel" class="form-control" id="ContactNo" placeholder="PatientContactNo">
                <span asp-validation-for="Patientphoneno" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="PatientAddress1">PatientAddress1</label>
                <input asp-for="PatientAddress1" type="text" class="form-control" id="patientaddress1">
                <span asp-validation-for="PatientAddress1" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="PatientAddress2">PatientAddress2</label>
                <input asp-for="PatientAddress2" type="text" class="form-control" id="patientaddress2">
                <span asp-validation-for="PatientAddress2" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="PState">State</label>
                <input asp-for="PState" type="text" class="form-control" id="state">
                <span asp-validation-for="PState" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="PCity">City</label>
                <input asp-for="PCity" type="text" class="form-control" id="city">
                <span asp-validation-for="PCity" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="ReasonType">ReasonType</label>
                <input asp-for="ReasonType" type="text" class="form-control" id="reasontype">
                <span asp-validation-for="ReasonType" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="AptBookingDate">AppointmentDate</label>
                <input asp-for="AptBookingDate" type="date" class="form-control" id="appointmentdate">
                <span asp-validation-for="AptBookingDate" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="AptBookingTime">AppointmentTime</label>
                <input asp-for="AptBookingTime" type="time" class="form-control" id="appointmenttime">
                <span asp-validation-for="AptBookingTime" class="text-danger"></span>
            </div>

        </div>

        <button type="submit" class="form-submit btn btn-primary" onclick="validateForm()" name="Register">Appointment</button>

        <script type="text/javascript">

            function validateForm() 
            {
                
                alert("Your AppointmentDetails are saving");

            }
        </script>

    </form>
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
