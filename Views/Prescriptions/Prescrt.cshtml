@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "CreatePrescriptions";
}
@model Zencareservice.Models.Prescs;
<h3>PrescriptionDetails</h3>
<html>
<head>
    <meta lang="en" />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
    <form asp-action="Prescrt" asp-controller="Prescriptions">
        <div class="form-row">
            <div class="form-group col-md-3">
                <label asp-for="DoctorFirstName">DoctorFirstName</label>
                <input type="text" asp-for="DoctorFirstName" class="form-control" id="patientname" placeholder="DoctorName">
                <span asp-validation-for="DoctorFirstName" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="DoctorLastName">DoctorLastName</label>
                <input type="text" asp-for="DoctorLastName" class="form-control" id="patientname" placeholder="DoctorName">
                <span asp-validation-for="DoctorLastName" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="PatientFirstName">PatientFirstName</label>
                <input type="text" asp-for="PatientFirstName" class="form-control" id="lastname" placeholder="PatientFirstName">
                <span asp-validation-for="PatientFirstName" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="PatientLastName">PatientLastName</label>
                <input type="text" asp-for="PatientLastName" class="form-control" id="lastname" placeholder="PatientLastName">
                <span asp-validation-for="PatientLastName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-3">
                <label asp-for="PatientAge">Age</label>
                <input asp-for="PatientAge" type=" text" class="form-control" id="age" placeholder="Age">
                <span asp-validation-for="PatientAge" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="PatientPhoneno">ContactNo</label>
                <input asp-for="PatientPhoneno" type="tel" class="form-control" id="phoneno" placeholder="ContactNo">
                <span asp-validation-for="PatientPhoneno" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="PatientGender">Gender</label>
                <select asp-for="PatientGender" name="BedType" id="gender" class="form-control">
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Transgender">Transgender</option>
                </select>

                <span asp-validation-for="PatientGender" class="text-danger"></span>
                
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="PatientDiagnosis">PatientDiagnosis</label>
                <input asp-for="PatientDiagnosis" type="text" class="form-control" id="patientdiagnosis">
                <span asp-validation-for="PatientDiagnosis" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label for="patientdetails" class="form-label">PatientDetails</label>
                <input class="form-control" type="file" id="patientdetails" multiple />
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                <label asp-for="PrescriptionDetail">Prescription Details</label>
                <input asp-for="PrescriptionDetail" type="text" class="form-control" id="prescriptiondetails">
                <span asp-validation-for="PrescriptionDetail" class="text-danger"></span>
            </div>
        </div>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-whatever="@@mdo">Open modal for @@mdo</button>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-whatever="@@fat">Open modal for @@fat</button>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-whatever="@@getbootstrap">Open modal for @@getbootstrap</button>

        <div class="modal fade example-modal-lg" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg " role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">New message</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="form-group">
                                <label for="recipient-name" class="col-form-label">Recipient:</label>
                                <input type="text" class="form-control" id="recipient-name">
                            </div>
                            <div class="form-group">
                                <label for="message-text" class="col-form-label">Message:</label>
                                <textarea class="form-control" id="message-text"></textarea>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Send message</button>
                    </div>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</body>
</html>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

